<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="q.pandian.ui.ac.GoodDetailActivity">

    <com.arialyy.frame.view.TitleBar
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        app:center_tv="商品详情" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/gd_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="商品编号：34242424" />

            <TextView
                android:id="@+id/gd_shopNum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="商品号：34242424" />

            <TextView
                android:id="@+id/gd_shopname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="商品名：34242424" />

            <TextView
                android:id="@+id/gd_barcode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="条形码：34242424" />

            <TextView
                android:id="@+id/gd_format"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="规格：34242424" />

            <TextView
                android:id="@+id/gd_addtime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="盘点开始时间：34242424" />

            <TextView
                android:id="@+id/gd_numbercount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="盘点前库存：34242424" />

            <TextView
                android:id="@+id/gd_numbersale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="盘点间出售：34242424" />

            <TextView
                android:id="@+id/gd_numberonedesk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="一楼货架库存：34242424" />

            <TextView
                android:id="@+id/gd_numberonefloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="一楼仓库库存：34242424" />

            <TextView
                android:id="@+id/gd_numbertowfloor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="二楼库存：34242424" />


            <TextView
                android:id="@+id/gd_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="差异数量：34242424" />

            <TextView
                android:id="@+id/gd_beizhu"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="原因：34242424" />

            <TextView
                android:id="@+id/gd_boxnum"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="每件个数：34242424" />

            <TextView
                android:id="@+id/gd_barcodes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="捆绑商品条码：34242424" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>
</layout>